  </div>
  <div class="show-name">
    <%= @user.name %>
  </div>
  <br>
  <div class="show-mail0">
    メールアドレス
  </div>
  <div class="show-mail">
    <%= @user.email %>
  </div>
  <br>
  <div class="show-profile0">
    プロフィール
  </div>
  <div class="show-profile0">
  <%= @user.profile %>
  </div>
