<%= form_for @tao do |f| %>
  <div class="field">
    <%= f.label :商品情報の編集 %>
    <%= f.submit :編集完了 , class: "button" %>
  </div>
  <div class="field">
    <%= f.label :商品名 %>
    <%= f.text_field :goods, :size => 55 %>
  </div>
  <div class="field">
    <%= f.label :商品画像 %>
    <%= f.file_field :image %>
    <br>
  </div>
  <div class="area">
    詳細
    <br>
    <%= f.text_area :goodscoment, rows: 4, cols: 58 %>
  </div>
<% end %>

<%= link_to "一覧に戻る", taos_path %>
<%= link_to "マイページへ戻る", user_path(current_user.id) %>